#include<iostream>
using namespace std;
#include<bits/stdc++.h>
int main(){
  int te; cin>>te;

  while (te --){
    int n; cin>>n;
    string s ; cin>>s;
    char chak = '1';
    int ans = 0;
    for( int i = 0; i<n ; i++){
        if( s[i] == chak){
            ans++;
            if(chak == '1') chak = '0';
            else chak =  '1';
        }
    }
    cout<<ans<<"\n";
  }
}
