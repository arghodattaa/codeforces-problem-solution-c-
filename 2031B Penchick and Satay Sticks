
#include<iostream>
using namespace std;
int main(){
    int te;
   cin>>te;
   while(te--){
       int n;
       cin>>n;
       int a;
       bool chak= true;
       for(int i =1 ;i<=n ; i++){
          cin>>a;
          if( i-1 >a || i+1 < a) chak = false;
       }
       if( chak ) cout<<"YES\n";
       else cout<<"NO\n";
   }
}
