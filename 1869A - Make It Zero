    int te ; cin>>te;
    while(te--){
            int n ;
        cin>>n;
        int a;
      for( int i = 0; i<n; i++){
        cin>>a;
      }
      if(n&1 == 1){
        cout<<4<<"\n";
        cout<<1<<" "<<n-1<<"\n";
